<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" 
	xmlns="http://java.sun.com/xml/ns/javaee" 
	xmlns:xml="http://www.w3.org/XML/1998/namespace" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_0.xsd ">

	<servlet>
		<!-- Este servlet se asocia con el contexto de Spring que se 
		define en el fichero de configuracion de spring 
		/WEB-INF/pepito-servlet.xml   -->
		<servlet-name>pepito</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>pepito</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>

</web-app>
